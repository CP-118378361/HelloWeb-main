@model GymWebApp.Models.BindingModel.AddJudgesBindingModel
@{
    ViewData["Title"] = "Create Judge";
 


}

<h1>Judge for @ViewBag.GymnastName</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJudge">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeSections" class="control-label"></label>
                <select asp-for="AgeSections" class="form-control">
                    <option value="1">Junior</option>
                    <option value="2">Senior</option>
                </select>
                <span asp-validation-for="AgeSections" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apparatuss" class="control-label"></label>
                <select asp-for="Apparatuss" class="form-control">
                    <option value="1">Bars</option>
                    <option value="2">Beam</option>
                    <option value="3">Floor</option>
                    <option value="4">Valutr</option>
                </select>
                <span asp-validation-for="Apparatuss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Judges">Back to All Judges</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
